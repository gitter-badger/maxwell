<div class="login-box">
  <div class="login-logo">
    <%= link_to(content_tag(:b, 'Maxwell'), root_url) %>
  </div>

  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
        <%= icon('envelope', nil, class: 'form-control-feedback') %>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        <%= icon('lock', nil, class: 'form-control-feedback') %>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <% if devise_mapping.rememberable? -%>
          <div class="checkbox icheck">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              Remember Me?
            <% end %>
          </div>
          <% end -%>
        </div>
        <div class="col-xs-4">
          <%= f.submit "Sign in", class: 'btn btn-primary btn-block btn-flat' %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
